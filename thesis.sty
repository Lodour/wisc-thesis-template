\renewcommand{\cftchapterleader}{\hfill}
\renewcommand{\cftchapterafterpnum}{}

% --- Section level font
\renewcommand{\cftsectionfont}{\normalfont}
\renewcommand{\cftsectionleader}{\cftdotfill{\cftfiguredotsep}}

\renewcommand{\afterloftitle}{}

% --- Figure level font
\renewcommand{\cftfigurefont}{\normalfont}
\renewcommand{\cftfigureleader}{\cftdotfill{\cftfiguredotsep}}
\renewcommand{\cftfigureafterpnum}{}

% List of Tables (lot)
\newcounter{lotpage}
\renewcommand{\printlottitle}[1]{\chapter*{#1}}
